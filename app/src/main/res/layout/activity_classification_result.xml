<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassiApp.ClassificationResultActivity">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Foto"
        android:onClick="pickPhoto"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/h2_classify"
        style="@style/TextBold.H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagePreview"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/h2_hasil"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textHasil"
        style="@style/Text.P6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/h2_classify"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Hasil Klasifikasi Ditampilkan"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_exit"
        style="@style/Text.P6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textHasil"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/exitapp_button"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_beranda"
        style="@style/Text.P6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_exit"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/backtomain_button"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/textHasil" />

</RelativeLayout>